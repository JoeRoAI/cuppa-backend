# Set default registry
registry=https://registry.npmjs.org/

# Save exact versions for production dependencies
save-exact=false

# Set cache directory
cache=.npm-cache

# Enable audit on install
audit=true

# Configure network timeout
network-timeout=60000

# Configure progress bar 
progress=true

# Configure loglevel
loglevel=warn

# Configure package lock
package-lock=true

# Configure peer dependencies
legacy-peer-deps=false

# Enable fund notifications
fund=false

# Configure engines check
engine-strict=true 